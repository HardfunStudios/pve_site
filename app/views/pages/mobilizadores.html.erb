<section class='section-top-mobilizadores bg-center bg-very-light'>
  <div class="xl:container xl:mx-auto xl:px-20">
    <div class="container mx-auto pt-24 pb-8 xl:pt-32 xl:pb-10">
      <div class='w-full flex flex-wrap'>
        <div class="w-2/3 lg:w-1/2 pr-16 lg:pr-20 xl:pr-32 flex flex-wrap content-center mx-auto">
          <p class="leading-6 text-xl text-black w-full">
            <strong>Mobilizadores</strong>
          </p>
          <p class="leading-snug text-sm text-black font-bold w-full mb-4">
            Esperamos que tenha uma boa experiência
          </p>
          <p class="leading-snug text-sm font-color-gray w-full">
            Aqui você encontrará conteúdos e materiais de apoio para a frente de Mobilização Social do PVE.<br/>
            <strong>Confira os conteúdos e baixe os arquivos!</strong>
          </p>
        </div>
      </div>
    </div>
    <div class='w-full relative bottom--40' id='top-buttons-mobilizadores'>
      <div class="flex flex-wrap justify-center text-center w-3/4 lg:w-2/3 items-center mx-auto px-8 xl:px-12">
        <div class="p-2 lg:p-4 md:w-1/3 w-full">
          <button @click='toggleSelected("3")' :class='{ active: activeBtn === "3" }' 
              class="w-full text-black font-bold py-2 px-4 rounded-full border-indigo-500 border bg-white flex items-center">
            <span class='ml-1'><%= image_tag 'ios-document', class: 'w-9 h-9 flex-shrink-0' %></span>
            <span class='w-full'>Conteúdos de apoio</span>
          </button>
        </div>
        <div class="p-2 lg:p-4 md:w-1/3 w-full">
          <button @click='toggleSelected("4")' :class='{ active: activeBtn === "4" }' 
              class="w-full text-black font-bold py-2 px-4 rounded-full border-indigo-500 border bg-white flex items-center">
            <span class='ml-1'><%= image_tag 'simple-docusign', class: 'w-9 h-9 flex-shrink-0' %></span>
            <span class='w-full leading-4'>Materiais para baixar</span>
          </button>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="text-gray-700 body-font xl:container xl:mx-auto xl:px-20">
  <%= render 'posts/content_mobilizadores', collection: @posts, cache: true %>
</section>