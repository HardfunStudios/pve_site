<section class="text-gray-700 body-font xl:container xl:mx-auto xl:px-20">
  <div class='container mx-auto flex flex-col'>
      
  <!-- First row -->
    <div class="flex flex-wrap px-4 w-full mt-8">
      <div class="p-4 w-2/3">
        <a href='<%= post_path(@posts[0]) %>?cat=gestores'>
          <div class="rounded overflow-hidden relative border-2 border-gray-500 h-full">
            <img src="<%= @posts[0].post_thumbnail %>" class='object-center w-full h-full' />
            <div class='absolute bottom-0 w-full h-24 bg-color-purple-transparent p-6'>
              <span class='text-base font-bold text-white'><%= truncate(@posts[0].post_title, :length => 130) %></span>
            </div>
          </div>
        </a>
      </div>

      <div class="p-4 w-1/3">
        <div class="rounded overflow-hidden relative border-2 border-gray-500 h-full">            
          <div class='p-4'>
            <span class='font-bold text-sm'>WEBINARS</span>
          </div>
          <div class='px-4'><hr></div>

          <div class='px-4'>
            <% @webinars.each do |post| %>            
              <a class="flex items-center mx-auto h-24 pt-4" href='<%= post_path(post) %>?cat=gestores'>
                <div class="flex flex-col w-2/5 bg-gray-300 h-full">
                  <img src="<%= post.post_thumbnail %>" class='object-center h-full' />
                </div>
                <div class="flex flex-wrap w-3/5 pl-2 p-1 h-full">
                  <h1 class="text-xs font-medium text-gray-700 leading-5 w-full">
                    <%= I18n.l(post.post_date_gmt, format: :just_day) %>
                  </h1>
                  <p class="leading-snug mb-1 text-xs font-bold text-black">
                    <%= truncate(post.post_title, :length => 45) %>
                  </p>
                </div>
              </a>
            <% end %>
          </div>
            
          <div class='p-4'>
            <hr>
            <a class='flex flex-col mt-4 text-center mx-auto' href='/gestores?category=0'>
              <span class='w-auto font-bold'>Ver tudo</span>
            </a>
          </div>
        </div>
      </div>     
    </div>      
      
  <!-- Second row -->
    <div class="flex flex-wrap px-4 w-full">
      <% @posts[1..2].each do |post| %>
        <%= render partial: 'posts/post', locals: {post: post, size_class: 'lg:w-1/3'} %>
      <% end %>

      <div class="p-4 w-1/3">
        <div class="rounded overflow-hidden relative border-2 border-gray-500 h-full">        
          <div class='p-4'>
            <span class='font-bold text-sm'>TELAS ABERTAS</span>
          </div>
          <div class='px-4'><hr></div>

          <div class='px-4'>
            <% @telas.each do |post| %>            
              <a class="flex items-center mx-auto h-24 pt-4" href='<%= post_path(post) %>?cat=professores'>
                <div class="flex flex-col w-2/5 bg-gray-300 h-full">
                  <img src="<%= post.post_thumbnail %>" class='object-center h-full' />
                </div>
                <div class="flex flex-wrap w-3/5 pl-2 p-1 h-full">
                  <h1 class="text-xs font-medium text-gray-700 leading-5 w-full">
                    <%= I18n.l(post.post_date_gmt, format: :just_day) %>
                  </h1>
                  <p class="leading-snug mb-1 text-xs font-bold text-black">
                    <%= truncate(post.post_title, :length => 45) %>
                  </p>
                </div>
              </a>
            <% end %>
          </div>
            
          <div class='p-4'>
            <hr>
            <a class='flex flex-col mt-4 text-center mx-auto' href='/professores?category=5'>
              <span class='w-auto font-bold'>Ver tudo</span>
            </a>
          </div>
        </div>
      </div>     
    </div>

  <!-- Third row -->
    <div class="flex flex-wrap px-4 w-full">
      <% @posts[3..5].each do |post| %>
        <%= render partial: 'posts/post', locals: {post: post, size_class: 'lg:w-1/3'} %>
      <% end %>

      <div class="p-4 w-1/3">
        <div class="rounded overflow-hidden relative border-2 border-gray-500 h-full">        
          <div class='p-4'>
            <span class='font-bold text-sm'>OPORTUNIDADES FORMATIVAS</span>
          </div>
          <div class='px-4'><hr></div>

          <div class='px-4'>
            <% @oportunidades.each do |post| %>            
              <a class="flex items-center mx-auto h-24 pt-4" href='<%= post_path(post) %>?cat=gestores'>
                <div class="flex flex-col w-2/5 bg-gray-300 h-full">
                  <img src="<%= post.post_thumbnail %>" class='object-center h-full' />
                </div>
                <div class="flex flex-wrap w-3/5 pl-2 p-1 h-full">
                  <h1 class="text-xs font-medium text-gray-700 leading-5 w-full">
                    <%= I18n.l(post.post_date_gmt, format: :just_day) %>
                  </h1>
                  <p class="leading-snug mb-1 text-xs font-bold text-black">
                    <%= truncate(post.post_title, :length => 45) %>
                  </p>
                </div>
              </a>
            <% end %>
          </div>
            
          <div class='p-4'>
            <hr>
            <a class='flex flex-col mt-4 text-center mx-auto' href='/gestores?category=1'>
              <span class='w-auto font-bold'>Ver tudo</span>
            </a>
          </div>
        </div>
      </div>     
    </div>

  <!-- Interessantes -->
    <div class="flex flex-wrap px-4 w-full">

      <div class='mx-4 pt-4 w-full border-t mt-2'><span class='text-sm'>VOCÊ PODE SE INTERESSAR TAMBÉM:</span></div>  
      
      <% @interessantes.each do |post| %>
        <%= render partial: 'posts/post', locals: {post: post, size_class: 'lg:w-1/3'} %>
      <% end %>
    
    </div>
    <div class="mt-2 w-full px-8 pt-2 mb-12"><div class="border-t"></div></div>

  </div>
</section>