<section class="body-font" id="home-hero-section">
    
  <div class="home-top-bg-img bg-cover bg-center full-bg-width" id="home-top-bg"></div>
  
  <div class="container mx-auto flex px-5 py-2 md:flex-row flex-col items-center mb-4">
    <div class="lg:flex-grow md:w-1/2 flex flex-col md:items-start md:text-left mb-16 md:mb-0 items-center text-center">
      <h1 class="title-font sm:text-base text-sm mb-2 font-color-purple">
        <strong>Seja bem vindo(a) ao PVE</strong>
      </h1>
      <p class="mb-4 leading-snug lg:text-3xl md:text-2xl text-2xl mb-4 font-color-purple">
        <strong class="font-color-purple-light">O programa que valoriza a educação com ajuda de </strong>
        <br/><strong class="font-color-purple"><spam id='home-collaborator-name'>{{title}}</spam></strong>
      </p>
      <%= search_form_for @q, url: search_posts_path, html: { method: :post, class:'flex w-full' } do |f| %>
        <%= f.search_field :post_content_cont, {id: 'home-search-input',
          class: 'w-full rounded mr-2 border-purple-1 pl-2',
          placeholder: 'Digite o que você procura. Ex: Webinar, Telas Abertas, Notícias'} %>
