<section class='section-top-gestores bg-left bg-very-light'>
  <div class="xl:container xl:mx-auto xl:px-20">
    <div class="container mx-auto pl-20 pr-24 xl:py-32 lg:py-24 py-20">
      <div class='w-full flex flex-wrap'>
        <div class="xl:w-5/6 w-3/4 pr-8 xl:pr-32 flex flex-wrap content-center mx-auto">
          <p class="leading-snug text-xl text-black font-bold w-full mb-4">
            Dicas para Gestores
          </p>
          <p class="leading-6 text-2xl font-color-purple w-full">
            <strong><%= @post.post_title %></strong>
          </p>
        </div>
      </div>
    </div>
  </div>
</section>

<section class="bg-very-light xl:px-40 lg:px-32 px-8">
