<div class="p-4 md:w-1/3 hidden post-card-preview post-cat-<%= post.category_number %>">
  <div class="h-full pb-8 rounded overflow-hidden relative border-2 border-gray-500">
    <div class="flex flex-wrap flex-col w-full bg-gray-300">
      <img src="<%= post.post_thumbnail %>" class='object-center lg:h-40 h-32' />
    </div>
    <div class='p-4'>
      <div class="flex flex-wrap mx-auto">
        <h2 class="tracking-widest text-xs title-font font-medium text-gray-500 mb-1 lg:w-2/3 w-1/2 truncate">
          <%= post.categories.first&.name %>
        </h2>
        <span class="lg:w-1/3 w-1/2 flex flex-row-reverse">
          <%= rails_social_share_button_tag(post.post_title, desc: post.post_title) %>
        </span>
      </div>
      <h1 class="sm:text-xl text-base font-medium text-black mb-3 leading-5"><%= post.post_title %></h1>
      <p class="leading-relaxed mb-1">
        <%= truncate(strip_tags(post.text_contents.first&.content), :length => 125) %>
      </p>
    </div>

    <a href='<%= post_path(post) %>/?cat=gestores' class="text-orange-600 inline-flex items-center mt-2 leading-none absolute bottom-0 right-0 text-right p-4">
      Ver v√≠deo
      <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
        <path d="M5 12h14"></path>
        <path d="M12 5l7 7-7 7"></path>
      </svg>
    </a>
    <div class="text-center mt-2 leading-none flex absolute bottom-0 left-0 w-1/2 lg:p-4 p-3">
      <span class="text-gray-600 mr-3 inline-flex items-center leading-none text-sm pr-3 py-1 border-r-2 border-gray-300">
        <svg class="w-3 h-3 lg:w-4 lg:h-4 mr-1" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
          <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
          <circle cx="12" cy="12" r="3"></circle>
        </svg><%= post.view_counter %>
