<div class="container px-5 py-16 mx-auto">
  <div class="flex flex-wrap flex-col mx-auto w-full text-black font-bold py-4">
    <div class="flex flex-col items-center" id="gestor-category-0">
      <span class='ml-1'><%= image_tag 'video-call', class: 'w-9 h-9 flex-shrink-0' %></span>
      <span class='text-base py-2'>Webinar</span>
    </div>
    <div class="flex flex-col items-center hidden" id="gestor-category-1">
      <span class='ml-1'><%= image_tag 'graduate', class: 'w-9 h-9 flex-shrink-0' %></span>
      <span class='text-base py-2'>Oportunidades Formativas</span>
    </div>
    <div class="flex flex-col items-center hidden" id="gestor-category-2">
      <span class='ml-1'><%= image_tag 'newspaper', class: 'w-9 h-9 flex-shrink-0' %></span>
      <span class='text-base py-2'>Notícias</span>
    </div>
  </div>
  <div class="flex flex-wrap px-4">
    <% @posts.each do |post| %>
      <% cache post do %>
        <div class="p-4 md:w-1/3">
          <div class="h-full pb-8 rounded overflow-hidden relative border-2 border-gray-500">
            <div class="flex flex-wrap flex-col w-full bg-gray-300">
              <img src="<%= post.image_files.first&.origin_url %>" class='object-center h-40' />
            </div>
            <div class='p-4'>
              <h2 class="tracking-widest text-xs title-font font-medium text-gray-500 mb-1">Webinar</h2>
              <h1 class="sm:text-xl text-base font-medium text-black mb-3 leading-5"><%= post.post_title %></h1>
              <p class="leading-relaxed mb-1">
                <%= truncate(strip_tags(post.text_contents.first&.content), :length => 125) %>
              </p>
            </div>
            
            <a href='#' class="text-orange-600 inline-flex items-center mt-2 leading-none absolute bottom-0 right-0 text-right p-4">
              Ver vídeo
              <svg class="w-4 h-4 ml-2" viewBox="0 0 24 24" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round">
                <path d="M5 12h14"></path>
                <path d="M12 5l7 7-7 7"></path>
              </svg>
            </a>
            <div class="text-center mt-2 leading-none flex absolute bottom-0 left-0 w-1/2 lg:p-4 p-3">
              <span class="text-gray-600 mr-3 inline-flex items-center leading-none text-sm pr-3 py-1 border-r-2 border-gray-300">
                <svg class="w-3 h-3 lg:w-4 lg:h-4 mr-1" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                  <path d="M1 12s4-8 11-8 11 8 11 8-4 8-11 8-11-8-11-8z"></path>
                  <circle cx="12" cy="12" r="3"></circle>
                </svg><%= post.view_counter %>
              </span>
              <span class="text-gray-600 inline-flex items-center leading-none text-sm">
                <svg class="w-3 h-3 lg:w-4 lg:h-4 mr-1" stroke="currentColor" stroke-width="2" fill="none" stroke-linecap="round" stroke-linejoin="round" viewBox="0 0 24 24">
                  <path d="M21 11.5a8.38 8.38 0 01-.9 3.8 8.5 8.5 0 01-7.6 4.7 8.38 8.38 0 01-3.8-.9L3 21l1.9-5.7a8.38 8.38 0 01-.9-3.8 8.5 8.5 0 014.7-7.6 8.38 8.38 0 013.8-.9h.5a8.48 8.48 0 018 8v.5z"></path>
                </svg>6
              </span>
            </div>
          </div>
        </div>    
      <% end %>
    <% end %>
  </div>
</div>
